#SISTEM PEMBELAJARAN MATEMATIKA
#Program Menghitung Bangun Datar
#fungsi
def luaspersegi(sisi):
    luas = sisi * sisi
    return(luas)
def kelilingpersegi(sisi):
    keliling = 4 * sisi
    return(keliling)
def luaspersegipanjang(panjang, lebar):
    luas = panjang * lebar
    return(luas)
def kelilingpersegipanjang(panjang, lebar):
    keliling = 2*(panjang+lebar)
    return(keliling)
def luassegitiga(alas, tinggi):
    luas = 0.5*alas*tinggi
    return(luas)
def kelilingsegitiga(sisi1, sisi2, sisi3):
    keliling = sisi1+sisi2+sisi3
    return(keliling)
def luaslingkaran(r):
    luas = 3.14*r*r
    return(luas)
def kelilinglingkaran(r)
    keliling = 2*3.14*r
    return(keliling)
def luasjajargenjang(alas, tinggi):
    luas = alas*tinggi
    return(luas)
def kelilingjajargenjang(alas, sisimiring):
    keliling = 2*(alas+sisimiring)
    return(keliling)
    
