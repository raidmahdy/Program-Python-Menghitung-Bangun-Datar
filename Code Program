#SISTEM PEMBELAJARAN MATEMATIKA
#Program Menghitung Bangun Datar
#fungsi
def luaspersegi(sisi):
    luas = sisi * sisi
    return(luas)
def kelilingpersegi(sisi):
    keliling = 4 * sisi
    return(keliling)
def luaspersegipanjang(panjang, lebar):
    luas = panjang * lebar
    return(luas)
def kelilingpersegipanjang(panjang, lebar):
    keliling = 2*(panjang+lebar)
    return(keliling)
def luassegitiga(alas, tinggi):
    luas = 0.5*alas*tinggi
    return(luas)
def kelilingsegitiga(sisi1, sisi2, sisi3):
    keliling = sisi1+sisi2+sisi3
    return(keliling)
def luaslingkaran(r):
    luas = 3.14*r*r
    return(luas)
def kelilinglingkaran(r)
    keliling = 2*3.14*r
    return(keliling)
def luasjajargenjang(alas, tinggi):
    luas = alas*tinggi
    return(luas)
def kelilingjajargenjang(alas, sisimiring):
    keliling = 2*(alas+sisimiring)
    return(keliling)
    
#Program utama
#Untuk Menampilkan Menu
pilihan1
while pilihan !=0:
    print("1. Menghitung Luas Persegi")
    print("2. Menghitung keliling Persegi")
    print("3. Menghitung Luas")
    print("4. Menghitung Keliling")
    print("5. Menghitung Luas")
    print("6. MenghitungKeliling")
    print("7. Menghitung Luas")
    print("8. MenghitungKeliling")
    print("9. Menghitung Luas")
    print("10. MenghitungKeliling") 
    print("0. Keluar")
